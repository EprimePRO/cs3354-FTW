<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/event_list_item">

    <TextView
        android:id="@+id/eventListTitle"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Title of Event"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/eventListTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eventListTitle"
        android:layout_alignParentEnd="true"
        android:text="12:00 PM"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:padding="5dp" />

    <View
        android:id="@+id/eventListColor"
        android:layout_width="7dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/eventListTime"
        android:layout_centerVertical="true"
        android:layout_marginStart="-13dp"
        android:elevation="1dp"
        android:background="@android:color/holo_blue_light" />


</RelativeLayout>